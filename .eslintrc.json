{
  "root": true, //root eslint file declared here
  "extends": [
    "eslint:recommended", // we use eslint recommended rules (alternative airbnb rules, etc.)
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 7, // defines version of JS
    "sourceType": "module" // standard JS modules
  },
  "env": {
    "browser": true, // eslint can expect that we use the browser
    "node": true, // and node
    "mocha": true // and mocha for test
  },
  "rules": {
    // this section is to overwrite the eslint rules from above
    "no-console": 1 // 0: off, 1: warning, 2: error
  }
}
